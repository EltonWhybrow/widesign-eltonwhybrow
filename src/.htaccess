RewriteCond %{HTTP_USER_AGENT} (MSIE|Trident) [NC]
RewriteCond %{REQUEST_URI} !(\.css|\.js|\.jpg|\.jpeg|\.png|\.gif|\.pdf)$ [NC]
RewriteCond %{REQUEST_URI} !resources [NC]
RewriteCond %{REQUEST_URI} !/unsupportedl$ [NC]
