<IfModule mod_rewrite.c>
  RewriteEngine On

# -------------------
  # Redirection to HTTPS:
# -------------------
RewriteCond %{HTTPS} !on
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# -------------------
# Redirection of requests to index.html TODO: INFORM ONESSELF
